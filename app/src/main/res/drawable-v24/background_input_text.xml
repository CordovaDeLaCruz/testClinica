<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/PrimaryPurpleDarkest" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/PrimaryPurpleDarkest" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/colorWindowBackground" />
            <corners android:radius="4dp" />
            <stroke android:width="2dp" android:color="@color/textAlertBlue" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/colorWindowBackground" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/textGrayNormal" />
        </shape>
    </item>

</selector>